{
    "compilerOptions": {
      "target": "es2018",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "dist",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "typeRoots": ["@types"],
      "resolveJsonModule": true
    }
  }